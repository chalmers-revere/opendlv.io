FROM alpine:edge AS builder
MAINTAINER Björnborg Nguyen "bjornborg.nguyen@chalmers.se"
RUN echo "http://dl-cdn.alpinelinux.org/alpine/edge/testing" >> /etc/apk/repositories
RUN apk update && \
    apk --no-cache add \
        ca-certificates \
        cmake \
        g++ \
        git \
        make \
        upx \
        ccache \
        gfortran \
        openblas-dev \
        icu \
        opencv-dev \
        opencv-libs \
        opencv 

WORKDIR /tmp

RUN git clone https://github.com/eigenteam/eigen-git-mirror.git && \
    mkdir -p eigen-git-mirror/build && \
    cd eigen-git-mirror/build && \
    cmake .. && \
    make install

RUN git clone --branch feature.beaglebone --depth 1 https://github.com/chalmers-revere/opendlv.io.git && \
    cd opendlv.io/opencv3/ && \
    mkdir build && \
    cd build && \
    cmake -D CMAKE_BUILD_TYPE=Release -D CMAKE_INSTALL_PREFIX=/tmp/beaglebone-dest .. && \
    make && make test && make install && upx -9 /tmp/beaglebone-dest/bin/beaglebone


# # # Part to deploy beaglebone.
FROM alpine:edge
MAINTAINER Björnborg Nguyen "bjornborg.nguyen@chalmers.se"

WORKDIR /usr/bin
COPY --from=builder /tmp/beaglebone-dest/bin/beaglebone .
CMD ["/usr/bin/beaglebone"]

